{% extends 'base.html.twig' %}

{% block title %}Technician index{% endblock %}

{% block body %}
    <h1>Technician index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Last_name</th>
                <th>First_name</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technician in technicians %}
            <tr>
                <td>{{ technician.id }}</td>
                <td>{{ technician.lastName }}</td>
                <td>{{ technician.firstName }}</td>
                <td>{{ technician.email }}</td>
                <td>
                    <a href="{{ path('technician_show', {'id': technician.id}) }}">show</a>
                    <a href="{{ path('technician_edit', {'id': technician.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('technician_new') }}">Create new</a>
{% endblock %}
