{% extends 'base.html.twig' %}

{% block title %}Gestion de la demande d'intervention{% endblock %}

{% block javascripts %}        
    <script src="{{ asset('assets/js/copyToClipboard.js') }}"></script>
{% endblock %}

{% block body %}
    <div class='text-center'>	
        <div class='h2 mb-3'>Gestion de la demande d'intervention</div>
        <a class="grey-btn f-20 px-4 py-2" href="{{ path('intervention_edit', {'id': intervention.id}) }}">Modifier</a>
        {{ include('intervention/_delete_form.html.twig') }}
    </div>
    <hr>

    <div class="container show-container">
        <div class="row justify-content-around">
            <div class="info-container col-md-auto mb-auto p-4">
                <div class='f-20 text-center'>Informations sur le client</div>
                <hr>
                <div class='row text-center'>
                    <div class='col'><a href="{{ path('client_show', {'id': intervention.client.id}) }}" class='mx-auto action-btn grey-btn px-4 py-1' /><i class="fas fa-link mr-3"></i>Accéder à la fiche client</a></div>
                </div>
                <hr>
                <div class='row mb-2'>
                    <div class='col-md-auto'><i class="fas fa-user"></i></div>
                    <div class='col'>{{ intervention.client.lastName }} {{ intervention.client.firstName }}</div>
                </div>
                <hr>
                <div class='row mb-2'>
                    <div class='col-md-auto'><i class="fas fa-phone"></i></div>
                    <div class='col'>{{ intervention.client.phone }}</div>
                </div>
                <hr>
                <div class='row mb-2'>
                    <div class='col-md-auto'><i class="fas fa-at"></i></div>
                    <div class='col'>{{ intervention.client.email ?: "<div class='missing-info'>Email non-renseignée</div>" }}</div>
                </div>
                <hr>
                <div class='row'>
                    <div class='col-md-auto'><i class="fas fa-map-marker-alt"></i></div>
                    <div class='col'>
                        <div class="d-flex flex-column">
                            {% if (intervention.client.street) or (intervention.client.city) or (intervention.client.postalCode) %}
                                {% if intervention.client.street %}
                                    <div>{{ intervention.client.street }}</div>
                                {% endif %}
                                {% if (intervention.client.city) or (intervention.client.postalCode) %}
                                    <div>{{ intervention.client.city }} {{ intervention.client.postalCode }}</div>
                                {% endif %}
                            {% else %}
                                <div class='missing-info'>Adresse non-renseignée</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>



            <div class="info-container mb-auto col-4 p-4">
                <div class='f-20 text-center'>Informations sur l'intervention</div>
                <hr>
                {% if intervention.status == 'Terminée' %}
                    <div class='row mb-2 status-manager'>
                        <div class='col-md-auto my-auto'>
                            <i class="fas fa-copy copy-btn fa-lg float-left" id='copyButton'>                                
                                <span class="copy-btn-label p-2" id="copyButtonLabel">Cliquer</span>
                            </i>
                        </div>
                        <div class='col'>
                            <div class='comment p-2'>
                                <div id='copyTarget'>{{ intervention.client }}, votre {{ intervention.equipment }} est disponible dans notre boutique.</div>
                            </div>
                        </div>
                    </div>
                    <hr>
                {% endif %}
                <div class='row mb-2 status-manager'>
                    <div class='col-md-auto my-auto'><i class="fas fa-hourglass-half"></i></div>
                    <div class='col'>
                        <form action="" method="post">
                            <input type='submit' name='status' value='En attente' class='py-1 px-2 action-btn grey-btn {% if intervention.status == 'En attente' %}inactive{% endif %}' {% if intervention.status == 'En attente' %}disabled{% endif %} />
                            <input type='submit' name='status' value='En cours' class='py-1 px-2 action-btn green-btn {% if intervention.status == 'En cours' %}active{% endif %}' {% if intervention.status == 'En cours' %}disabled{% endif %}/>
                            <input type='submit' name='status' value='Terminée' class='py-1 px-2 action-btn grey-btn {% if intervention.status == 'Terminée' %}inactive{% endif %}' {% if intervention.status == 'Terminée' %}disabled{% endif %}/>
                        </form>
                    </div>
                </div>
                <hr>
                <div class='row'>
                    <div class='col-md-auto'><i class="fas fa-clock"></i></div>
                    <div class='col'>
                        <div class='row'>
                            <div class='col-md-auto'>
                                <div class="d-flex flex-column text-center">
                                    <div>Date de dépôt</div>
                                    <div>{{ intervention.depositDate ? intervention.depositDate|date('d-m-Y') : "<div class='missing-info'>Non-renseignée</div>" }}</div>
                                </div>
                            </div>
                            <div class='col-md-auto'>
                                <div class="d-flex flex-column text-center">
                                    <div>Date de retour</div>
                                    <div>{{ intervention.returnDate ? intervention.returnDate|date('d-m-Y') : "<div class='missing-info'>Non-renseignée</div>" }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class='row mb-2'>
                    <div class='col-md-auto'><i class="fas fa-users-cog"></i></div>
                    <div class='col'>
                        <div>
                            {% for technician in intervention.technicians %}
                                {{ technician }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <hr>
                <div class='row'>
                    <div class='col-md-auto'><i class="fas fa-comment-dots"></i></div>
                    <div class='col'>
                        <div class='comment p-2'>{{ intervention.comment ?: "<div>Pas de commentaire</div>" }}</div>
                    </div>
                </div>
                <hr>
                <div class='row mb-2'>
                    <div class='col-md-auto'><i class="fas fa-wrench"></i></div>
                    <div class='col'>
                        <div>
                            {% for task in intervention.tasks %}
                                {{ task }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <hr>
                <div class='row mb-2'>
                    <div class='col-md-auto'><i class="fas fa-hdd"></i></div>
                    <div class='col'>{{ intervention.operatingSystem }}</div>
                </div>
                <hr>
                <div class='row mb-2'>
                    <div class='col-md-auto'><i class="fas fa-desktop"></i></div>
                    <div class='col'>{{ intervention.equipment }}</div>
                </div>
            </div>



            <div class="info-container mb-auto col-md-auto p-4">
                <div class='f-20 text-center'>Fiche PDF</div>
                <hr>
                <div class='row'>
                    <div class='col'>
                        <form action="" method="post">
                            <i class="fas fa-download mr-3"></i>
                                {% if intervention.status == 'En attente' %}
                                    <input type='submit' name='download' value='Télécharger' class='mx-auto action-btn grey-btn px-4 py-1 disabled' disabled />
                                {% else %}
                                    <input type='submit' name='download' value='Télécharger' class='mx-auto action-btn grey-btn px-4 py-1' />
                                {% endif %}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}